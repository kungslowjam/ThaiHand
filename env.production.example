# Docker Registry Configuration
DOCKER_USERNAME=your-docker-username

# Database Configuration
POSTGRES_DB=thaihand_prod
POSTGRES_USER=thaihand_user
POSTGRES_PASSWORD=your-secure-password
DATABASE_URL=postgresql://thaihand_user:your-secure-password@postgres:5432/thaihand_prod

# Backend Configuration
SECRET_KEY=your-super-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Frontend Configuration
NODE_ENV=production
NEXT_PUBLIC_API_URL=https://thaihand.shop/api
NEXTAUTH_URL=https://thaihand.shop
NEXTAUTH_SECRET=your-nextauth-secret

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# LINE OAuth
LINE_CLIENT_ID=your-line-client-id
LINE_CLIENT_SECRET=your-line-client-secret

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring Configuration
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=thaihand-backups
BACKUP_S3_ACCESS_KEY=your-s3-access-key
BACKUP_S3_SECRET_KEY=your-s3-secret-key
